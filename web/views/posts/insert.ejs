<div class ="my-5">
    <h1 class="text-center mb-5">글쓰기</h1>
    <form name="frm" class="card p-3">
        <input name="title" placeholder="제목을 입력하세요." class="form-control mb-2">
        <textarea name="content" rows="10" placeholder="내용을 입력하세요" class="form-control"></textarea>
        <div class="text-center my-3">
            <button class="btn btn-dark px-5">등록</button>
            <button class="btn btn-secondary px-5" type="reset">취소</button>
        </div>
    </form>
</div>
<script type="module">
    import { app } from "/javascripts/firebase.js";
    import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/10.4.0/firebase-firestore.js";
    const db = getFirestore(app);

    $(frm).on("submit",async function(e){
        e.preventDefault();

        const title = $(frm.title);
        const content = $(frm.content);
        const titleVal = title.val()
        const contentVal = content.val()
        if(title.val() == "") {
            alert("제목을 입력하세요.");
            title.focus();
            return;
        };

        if(content.val() == "") {
            alert("내용을 입력하세요.");
            content.focus();
            return;
        };

        if(confirm("새로운 게시글을 등록하시겠습니까?")) {
            const email=sessionStorage.getItem("email");
            const date = moment(new Date()).format("YYYY-MM-DD HH:mm:ss");
            const data = {email, date, titleVal, contentVal};
            await addDoc(collection(db, 'posts'), data);

            alert('새로운 글이 등록되었습니다!!')
            location.href="/posts"
        };
    });
</script>